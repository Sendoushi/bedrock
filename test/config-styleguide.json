{
    "projectId": "foostyleguide",
    "projectName": "Foo styleguide",
    "tasks": [{
        "type": "styleguide",
        "env": "dev",
        "data": [{
            "src": "./examples/styleguide",
            "dest": "./test/testdest/styleguide",
            "options": {
                "layouts": {
                    "general": "general_layout.html",
                    "pattern": "pattern_layout.html",
                    "pattern2": "pattern_2_layout.html"
                },
                "components": [
                    "00_config/config.json",
                    "01_button/button.json"
                ],
                "generalLayout": "general",
                "patternLayout": "pattern",
                "scriptCompileOptions": {
                    "externals": { "jquery": "jQuery" },
                    "cache": false,
                    "debug": true,
                    "devtool": "source-map",
                    "plugins": [{
                        "name": "define",
                        "args": [{
                            "IS_BROWSER": true
                        }]
                    }, {
                        "name": "provide",
                        "args": [{
                            "$": "jquery",
                            "jQuery": "jquery",
                            "Promise": "imports?this=>global!exports?global.Promise!es6-promise"
                        }]
                    }]
                },
                "styleCompileOptions": {
                    "minify": false,
                    "sourceMap": true,
                    "autoprefixer": []
                }
            }
        }]
    }]
}
